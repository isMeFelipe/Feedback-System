<div class="container">
    <div class="card">
        <div class="card-header">
            <h1 class="text-center">Admin Login</h1>
        </div>
        <div class="card-body">
            <form action="/admin/login/auth" method="post">
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" name="email" placeholder="Example@example.com" autofocus class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" placeholder="Your password" class="form-control">
                </div>
                <button type="submit" class="btn btn-block btn-success">Confirm</button>
                <a href="/" class="btn btn-block btn-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>


